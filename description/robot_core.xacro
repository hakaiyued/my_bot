<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS -->

    <joint name="chassis" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.25 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz= "0.25 0 0.125" />
            <geometry>
                <box size="0.5 0.5 0.25" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz= "0.25 0 0.125" />
            <geometry>
                <box size="0.5 0.5 0.25" />
            </geometry>
            <material name="white" />
        </collision>
        <inertial>
            <origin xyz="0.25 0 0.125"/>
            <mass value="10"/>
            <inertia ixx="0.26042" ixy="0" ixz="0" iyy="0.26042" iyz="0" izz="0.41667"/>
        </inertial>
    </link>

    <!-- WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.275 0" rpy="-${pi/2} 0 0" />
        <axis xyz= "0 0 1" />
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </collision>
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.00114" ixy="0" ixz="0" iyy="0.00114" iyz="0" izz="0.00188"/>
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.275 0" rpy="${pi/2} 0 0" />
        <axis xyz= "0 0 -1" />
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </collision>
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.00114" ixy="0" ixz="0" iyy="0.00114" iyz="0" izz="0.00188"/>
        </inertial>
    </link>

    <!-- CASTER WHEEL LINK -->

    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="front_caster_wheel" />
        <origin xyz="0.1 0 0" />
    </joint>

    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="black" />
        </collision>
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.15" ixy="0" ixz="0" iyy="0.15" iyz="0" izz="0.15"/>
        </inertial>
    </link>

    <joint name="rear_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="rear_caster_wheel" />
        <origin xyz="0.4 0 0" />
    </joint>

    <link name="rear_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="black" />
        </collision>
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.15" ixy="0" ixz="0" iyy="0.15" iyz="0" izz="0.15"/>
        </inertial>
    </link>

</robot>